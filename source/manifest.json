{
 	"manifest_version": 3,
	"name": "GeoGuessr Image Extraction",
	"permissions": ["scripting", "storage" , "activeTab", "tabs"],
	"host_permissions": ["https://www.geoguessr.com/*", 
						 "https://streetviewpixels-pa.googleapis.com/v1/*",
						 "http://localhost/*"],
 	"description": "Extracts image from a street view in GeoGuessr",
	"web_accessible_resources": [{
		"matches": ["https://www.geoguessr.com/*"],
		"resources": ["scripts/injected.js", "images/logo.svg"]
	}, 
	{ 
		"matches": ["<all_urls>"],
		"resources": ["config.json"]
	}],
  	"author" : "Dmytro Avdieienko & Daniil Zahoruiko",
	"version": "1.0.0",
  	"action": {
		"default_popup": "./popup/popup.html",
		"default_icon": "./images/icon.webp"
  	},
	"background": {
		"service_worker": "./scripts/background.js"
	},
	"content_scripts": [{
		"matches": ["https://www.geoguessr.com/*"],
		"js": ["./scripts/content-script.js"]
	}]
}
